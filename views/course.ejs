<%- layout("boilerplate") %>
<!-- Course detail pg  -->
<body>
  <div class="course-detail-pg-main">
    <section class="course-detail-pg">
      <img src="\assets\alhaseeb-banner-1.webp" alt="he" />
      <div class="course-detail-hero-section">
        <div class="course-detail">
          <h1><%= course.name %></h1>
          <p><%= course.description %></p>

          <div class="social">
            <a href="https://www.facebook.com/share/16npEX88cL/"
              ><i class="fa-brands fa-facebook"></i
            ></a>
            <a href="https://www.instagram.com/al_haseeb.institute/"
              ><i class="fa-brands fa-instagram"></i
            ></a>
            <a
              href="https://wa.me/923439555890?text=Assalam-O-Alikum%2C%20I%20want%20to%20learn%20Quran%21"
              ><i class="fa-brands fa-whatsapp"></i
            ></a>
          </div>
        </div>
      </div>
    </section>

    <div class="course-card">
      <img src="<%= course.image %>" alt="background_img" />
      <div class="layer">
        <h2><%= course.name %></h2>
        <div class="cards">
          <div class="course-banner banner">
            <img src="<%= course.image %>" alt="course_banner" />
          </div>
          <div class="content-banner banner">
            <img
              src="/assets/alhaseeb-course-feature-poster.webp"
              alt="course_feature_poster"
            />
          </div>
        </div>
      </div>
    </div>

    <a id="courseForm"></a>
    <section class="course_form">
      <div class="form">
        <h2>Book Free Trial Appointment</h2>
        <p>
          Fill in the form & The assigned tutor will contact you to confirm the
          appointment of free trial lesson with you.
        </p>
        <form action="/form" method="post">
          <div>
            <input
              type="text"
              name="data[subject]"
              value="Free Trial"
              style="display: none"
            />
          </div>

          <div>
            <label for="name">Your Full Name</label>
            <input
              type="text"
              name="data[name]"
              id="name"
              placeholder="Enter Name"
              required
            />
          </div>

          <div>
            <label for="email">Your Email</label>
            <input
              type="email"
              name="data[email]"
              id="email"
              placeholder="Your Email (ex. Hamid@gmail.com)"
              required
            />
          </div>

          <div>
            <label for="number">Your Number</label>
            <input
              type="number"
              name="data[number]"
              id="number"
              placeholder="Enter Number"
              required
            />
          </div>

          <div>
            <label for="country">Enter Your Country</label>
            <input
              type="text"
              name="data[country]"
              id="country"
              placeholder="Enter Country"
              required
            />
          </div>

          <div>
            <label for="dropdown">Choose Course:</label>
            <select name="data[courses]" id="dropdown" required>
              <option value="Noorani Qaida">Noorani Qaida</option>
              <option value="Quran Recitation">Quran Recitation</option>
              <option value="Quran Memorization">Quran Memorization</option>
              <option value="Tajweed Course">Tajweed Course</option>
              <option value="Quran with Tafseer">Quran with Tafseer</option>
              <option value="Basic islamic course">Basic Islamic Course</option>
            </select>
          </div>

          <div>
            <label for="note">Enter Note(Optional)</label>
            <textarea
              name="data[note]"
              id="note"
              cols="35"
              rows="8"
              placeholder="Enter Note"
              required
            ></textarea>
          </div>

          <button class="primary-btn">Submit</button>
        </form>
      </div>
      <div class="courses-poster">
        <h2>Featured Course</h2>
        <div class="poster">
          <div class="course-poster-imgs">
            <% allCourses.forEach(eachCourse => { %>
            <img src="<%= eachCourse.image %>" alt="poster_img" />
            <% }); %> <% if(allCourses.length > 0) { %>
            <img src="<%= allCourses[0].image %>" alt="poster_img" />
            <% } %>
          </div>
        </div>
      </div>
    </section>

    <section class="course-material">
      <% if(course.additionalDetails && course.additionalDetails.length > 0) {
      %>
      <div class="material">
        <h2>In the <%= course.name %> course, you will learn:</h2>
        <ul>
          <% course.additionalDetails.forEach(detail => { %>
          <li><%= detail %></li>
          <% }); %>
        </ul>
      </div>

      <div class="course-secondary-imgs">
        <img src="<%= course.secondaryImg %>" alt="Secondary_img" />
      </div>

      <% } %>
    </section>

    <!-- Courses Section -->
    <section class="courses">
      <a id="courses"></a>
      <% if(allCourses) { %>
      <div class="course-pg-heading">
        <h2>Course Catagories</h2>
      </div>
      <div class="cards">
        <% for( let course of allCourses ) { %>
        <div class="course-card">
          <div class="card-top">
            <div class="card-thumbnail">
              <img src="<%= course.image %>" alt="course-image" />
            </div>
          </div>
          <div class="card-bottom">
            <h2 class="card-title"><%= course.name %></h2>
            <div class="card-description">
              <p><%= course.description %></p>
            </div>

            <form action="/courses/<%=course. _id %>" method="get">
              <button class="card-btn primary-btn" type="_blank">
                Course Details
              </button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>
    </section>
  </div>
</body>
