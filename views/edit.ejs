<%- layout("boilerplate") %>
<section class="course_form">
  <div class="form">
    <h2>Book Free Trial Appointment</h2>
    <p>
      Fill in the form & The assigned tutor will contact you to confirm the
      appointment of free trial lesson with you.
    </p>
    <form action="/courses/<%= course. _id %>" method="post">
      <div>
        <label for="name">Course Full Name</label>
        <input
          type="text"
          name="course[name]"
          id="name"
          value="<%= course.name %>"
          required
        />
      </div>

      <div>
        <label for="Image">Image</label>
        <input
          type="text"
          name="course[image]"
          id="Image"
          value="<%= course.image %>"
        />
      </div>

      <div>
        <label for="Description">Description</label>
        <textarea
          name="course[description]"
          id="Description"
          cols="35"
          rows="8"
          required
        >
        <%= course.description %>
    </textarea
        >
      </div>

      <div>
        <label for="Price">Price</label>
        <input
          type="number"
          name="course[price]"
          id="Price"
          value="<%= course.price %>"
          required
        />
      </div>

      <div>
        <label for="Tutor">Tutor</label>
        <input
          type="text"
          name="course[tutor]"
          id="Tutor"
          value="<%= course.tutor %>"
          required
        />
      </div>

      <button class="primary-btn">Update</button>
    </form>
  </div>
</section>
